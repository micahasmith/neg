generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String?  @unique
  name        String?
  image       String?
  city        String?
  state       String?
  country     String?
  status      String?
  votesGiven  TraitVote[] @relation("TraitVoter")
  votesReceived TraitVote[] @relation("TraitTarget")
  authoredWallPosts WallPost[] @relation("WallAuthor")
  wall        WallPost[] @relation("WallOwner")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  accounts    Account[]
  sessions    Session[]
}

model NegativeTrait {
  id        String      @id @default(cuid())
  label     String
  votes     TraitVote[]
  createdAt DateTime    @default(now())
}

model TraitVote {
  id          String        @id @default(cuid())
  voter       User          @relation("TraitVoter", fields: [voterId], references: [id])
  voterId     String
  target      User          @relation("TraitTarget", fields: [targetId], references: [id])
  targetId    String
  trait       NegativeTrait @relation(fields: [traitId], references: [id])
  traitId     String
  createdAt   DateTime      @default(now())
}

model WallPost {
  id        String      @id @default(cuid())
  author    User        @relation("WallAuthor", fields: [authorId], references: [id])
  authorId  String
  owner     User        @relation("WallOwner", fields: [ownerId], references: [id])
  ownerId   String
  text      String
  replies   WallReply[]
  createdAt DateTime    @default(now())
}

model WallReply {
  id        String   @id @default(cuid())
  post      WallPost @relation(fields: [postId], references: [id])
  postId    String
  text      String
  createdAt DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
